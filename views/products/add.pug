extends ../layouts/common

block content
    h1 Add Product
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/products/add" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=values ? values.name : '')
        .form-group
            label(for="price") Price
            input#price.form-control(type="number", name="price", value=values ? values.price : '')
        .form-group
            label(for="description") Description
            textarea(name="description", cols="50", rows="10", value=values ? values.description : '')#description.form-control
        .form-group
            label(for="image") Image
            input.form-control(type="file", name="image")
        button.btn.btn-primary Add