extends ../layouts/common

block content
    h1 List Users
    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") Create

        form.ml-auto(action="/users/search" method="GET" class="d-flex")
            input(type="text" name="username" value=username class="form-control")
            button(class="btn btn-primary") Search
        
    table.table
        th Name
        th Age
        th Phone
        th Action

        each user in users
            tr
                td= user.name
                td= user.age
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user._id) View