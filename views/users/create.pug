extends ../layouts/common

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create" method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=values ? values.name : '')

        .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", value=values ? values.email : '')

        .form-group
            label(for="age") Age &nbsp;
            - var n = 1;
            select#age(name="age")
                while n < 21
                    option(value=n)= n++
        
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value=values ? values.phone : '')

        .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", value=values ? values.password : '')

        .form-group
            label(for="cfpassword") Confirm password
            input#cfpassword.form-control(type="password", name="cfpassword", value=values ? values.cfpassword : '')
        button.btn.btn-primary Create
    